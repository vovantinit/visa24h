<data>

    <record model="ir.actions.act_url" id="hanh_dong_giao_nhan">
        <field name="name">Giao nhận</field>
        <field name="url">/giao_nhan</field>
        <field name="target">self</field>
    </record>

    <template id="index">
        <!-- <t t-call="website.layout">
            <t t-set="title">Giao nhận</t>
